entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["chromium", "geckodriver", "unzipNLS", "wget"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "gce"

[[ports]]
localPort = 8000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DiscourseBot"

[[workflows.workflow]]
name = "DiscourseBot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python discoursebot.py"

[workflows.workflow.metadata]
outputType = "console"
